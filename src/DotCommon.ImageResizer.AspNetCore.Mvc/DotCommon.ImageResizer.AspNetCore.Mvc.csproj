<Project Sdk="Microsoft.NET.Sdk">

  <Import Project="..\..\build\common.props" />
  <PropertyGroup>
    <TargetFramework>netcoreapp3.0</TargetFramework>
    <AssemblyName>DotCommon.ImageResizer.AspNetCore.Mvc</AssemblyName>
    <PackageId>DotCommon.ImageResizer.AspNetCore.Mvc</PackageId>
    <RootNamespace>DotCommon</RootNamespace>
    <IsPackable>true</IsPackable>
    <OutputType>Library</OutputType>
    <Description>DotCommon通用工具类库,图片在AspNetCore下自动进行缩放、排版功能</Description>
  </PropertyGroup>


  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <WarningsAsErrors />
    <DocumentationFile>bin\Debug\netcoreapp3.0\DotCommon.ImageResizer.AspNetCore.Mvc.xml</DocumentationFile>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <DocumentationFile>bin\Release\netcoreapp3.0\DotCommon.ImageResizer.AspNetCore.Mvc.xml</DocumentationFile>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <WarningsAsErrors />
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Mvc.Versioning" Version="4.0.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\DotCommon.Caching\DotCommon.Caching.csproj" />
    <ProjectReference Include="..\DotCommon\DotCommon.csproj" />
    <ProjectReference Include="..\DotCommon.ImageUtility\DotCommon.ImageUtility.csproj" />
  </ItemGroup>

</Project>
